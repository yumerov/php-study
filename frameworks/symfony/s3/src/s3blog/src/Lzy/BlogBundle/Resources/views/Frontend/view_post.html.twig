{% extends "LzyBlogBundle:Frontend:layout.html.twig" %}

{% block title %}{{ blog.title }} - {{ post.title }}{% endblock %}

{% block posts %}
		<div class="blog-post">
		  <h2 class="blog-post-title">{{ post.title }}</h2>
		  <p class="blog-post-meta">{{ post.createdAt|date(blog.date_format) }} by <a href="#">{{ blog.author }}</a> under <a href="#category-page">{{ post.category.name }}</a></p>

		  {{ post.content }}
		</div><!-- /.blog-post -->

	{% if post.tags is not empty %}
	<nav>
	  <ul class="pager">
	  	{% for tag in post.tags %}
	  		<li><a href="#tag-url-{{ tag.id }}">{{ tag.name }}</a></li>
	  	{% endfor %}
	  </ul>
	</nav>
	{% endif %}
{% endblock %}